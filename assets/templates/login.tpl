<div id="login">
    <div class ='logincontainer'>
        <form id="login-form">
            <div class="form-group">
                <label for="login-username"><%>username<%></label>
                <input class="form-control" id="login-username" required type="text" placeholder="<%>username<%>"/>
            </div>
            <div class="form-group">
                <label for="login-password"><%>password<%></label>
                <input class="form-control" id="login-password" required type="password" placeholder="<%>password<%>"/>
            </div>
            <button class="btn btn-dark" type="submit" id="login-submit"><%>login<%></button>
        </form>
    </div>
</div>